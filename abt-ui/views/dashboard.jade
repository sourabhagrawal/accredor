html(lang='en')
	include common/head
	body
		include common/global-header
		.container-fluid
			.row-fluid
				.span2.well
					ul.nav.nav-list(id='dashboard-nav')
						li.active
							a(data-href='dashboard/reports', href='#', id='reports') 
								i.icon-list
								|  Reports
						li.divider
						li.nav-header Actions
						li
							a(data-href='dashboard/experiments/create', href='#', id='create-experiment') 
								i.icon-wrench
								|  Create Experiment
						li
							a(data-href='dashboard/goals/create', href='#', id='create-goal') 
								i.icon-file
								|  Create Goal
						li.divider
						li.nav-header Resources
						li
							a(data-href='dashboard/experiments', href='#', id='nav-experiments') 
								i.icon-random
								|  Experiments
							ul.nav.nav-list
								li
									a(data-href='dashboard/experiments/created', href='#', id='nav-ready-experiments') 
										i.icon-thumbs-up
										|  Ready
								li
									a(data-href='dashboard/experiments/started', href='#', id='nav-running-experiments') 
										i.icon-play
										|  Running
								li
									a(data-href='dashboard/experiments/stopped', href='#', id='nav-stopped-experiments') 
										i.icon-stop
										|  Stopped
						li
							a(data-href='dashboard/goals', href='#', id='nav-goals') 
								i.icon-road
								|  Goals
							ul.nav.nav-list
								li
									a(data-href='dashboard/goals/created', href='#', id='nav-active-goals') 
										i.icon-ok
										|  Active
								li
									a(data-href='dashboard/goals/stopped', href='#', id='nav-disabled-goals') 
										i.icon-ban-circle
										|  Disabled
				.span10
					.container-fluid(id="dashboard-content", style='min-height:200px;')
		include common/global-footer 
	script(src="/js/dashboard.js")