div(id='login-box-container')
div(id='forgot-box-container')

-if(locals.isAuthenticated == false)
	.top-bar
		.container-fluid
			.row-fluid
				.offset9.span3
					ul.nav.nav-pills
						li.pull-right
							a#login-btn(href='#') LOGIN
						li.pull-right
							a#signup-btn(href='#') SIGNUP
	header
		.container-fluid
			.row-fluid
				.span4
					.logo
						h1
							a(href='/') #{domain_name}
				.span3.offset5
					.list
						.email
							i.icon-envelope-alt
							| Email: #{support_id}
	.navbar
		.navbar-inner
			.container-fluid
				a.btn.btn-navbar(data-target='.nav-collapse', data-toggle='collapse') Menu
				.nav-collapse
					ul.nav
						li
							a(href='/') Home
						li
							a(href='#') Features
						li
							a(href='/getting-started') Getting Started
						li
							a(href='/faqs') Support
								
-if(locals.isAuthenticated == true)
	.top-bar.top-bar-margin
		.container-fluid
				.row-fluid
					.span2
						.logo
							h1(style='color: #eee;')
								a(href='/', style='color: #fff; text-decoration: none;') #{domain_name}
					.span7
						ul.nav.nav-pills
							li
								a(href='/dashboard') Dashboard
							li
								a(href='#') Features
							li
								a(href='/getting-started') Getting Started
							li
								a#installation-link(href='#installation-modal', data-toggle='modal') Installation
							li
								a(href='/faqs') Support
					.span3
						ul.nav.nav-pills
							li.dropdown.pull-right
								a.dropdown-toggle(data-toggle="dropdown", href="#") #{locals.user.email}
									b.caret
								ul.dropdown-menu
									li
										a(href='/logout') LOGOUT
	#installation-modal.modal.hide.fade(tabindex='-1', role='dialog', aria-hidden='true')
		.modal-header
			button.close(type='button', data-dismiss='modal', aria-hidden='true') x
			h3 #{domain_name} Installation
		.modal-body
			p
				p Copy this code and paste it immediately after the opening of the <head> tag:
				p
					code &lt;script src=&quot;//www.#{domain}/scripts/#{locals.user.id + 7615327}.js&quot;&gt;&lt;/script&gt;
				p
					| Include this line on every page you want to run experiments on and track as a goal.
				p This line will not change for you account.
		.modal-footer
			button.btn(data-dismiss='modal', aria-hidden='true') Close


